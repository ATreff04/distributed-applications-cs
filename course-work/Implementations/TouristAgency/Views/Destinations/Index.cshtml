@model IEnumerable<TouristAgency.Entities.Destination>

@{
    ViewData["Title"] = "Destinations";
}

<h1>Destinations</h1>
@if (User.IsInRole("Admin"))
{
    <a asp-action="Create">Create New</a>
}
</td>



<form asp-action="Index" method="get" class="mb-3">
    <div style="display:flex; gap:10px; max-width:600px;">
        <input type="text" name="searchName"
               value="@ViewData["CurrentName"]"
               class="form-control" placeholder="Search by name" />

        <input type="text" name="searchCountry"
               value="@ViewData["CurrentCountry"]"
               class="form-control" placeholder="Search by country" />

        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
               Destination
            </th>
            <th>
                Country
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
              Available
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Country</td>
                <td>@item.Description</td>
                <td>@item.ImageUrl</td>
                <td>@item.CreatedOn</td>
                <td>@item.IsActive</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole("Admin"))
                    {

                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                    }
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="mt-3">
    <div style="display:flex; gap:10px;">
        @if ((int)ViewData["CurrentPage"] > 1)
        {
            <a class="btn btn-secondary"
               asp-action="Index"
               asp-route-page="@( (int)ViewData["CurrentPage"] - 1 )"
               asp-route-searchName="@ViewData["CurrentName"]"
               asp-route-searchCountry="@ViewData["CurrentCountry"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]">
                Previous
            </a>
        }

        @if ((int)ViewData["CurrentPage"] < (int)ViewData["TotalPages"])
        {
            <a class="btn btn-secondary"
               asp-action="Index"
               asp-route-page="@( (int)ViewData["CurrentPage"] + 1 )"
               asp-route-searchName="@ViewData["CurrentName"]"
               asp-route-searchCountry="@ViewData["CurrentCountry"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]">
                Next
            </a>
        }
    </div>
</div>
