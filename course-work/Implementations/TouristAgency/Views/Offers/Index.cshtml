@model IEnumerable<TouristAgency.Entities.Offer>

@{
    ViewData["Title"] = "Offers";
}

<h1>Offers</h1>


<form method="get" class="mb-3">
    <input type="text"
           name="search"
           value="@Context.Request.Query["search"]"
           placeholder="Search..."
           class="form-control"
           style="max-width:250px; display:inline-block;" />

    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["PriceSort"]"
       class="btn btn-secondary">
        Sort by Price
    </a>

    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create">Create New</a>
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>Destination</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.PaymentMethod)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Destination.Country</td>
                <td>@item.Price</td>
                <td>@item.PaymentMethod</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    @if (User.IsInRole("Admin"))
                    {

                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                    }
                </td>
            </tr>
        }
    </tbody>
</table>


<div style="display:flex; gap:10px;" class="mt-3">
    @if ((int)ViewData["CurrentPage"] > 1)
    {
        <a class="btn btn-secondary"
           asp-action="Index"
           asp-route-page="@( (int)ViewData["CurrentPage"] - 1 )">
            Previous
        </a>
    }

    @if ((int)ViewData["CurrentPage"] < (int)ViewData["TotalPages"])
    {
        <a class="btn btn-secondary"
           asp-action="Index"
           asp-route-page="@( (int)ViewData["CurrentPage"] + 1 )">
            Next
        </a>
    }
</div>
